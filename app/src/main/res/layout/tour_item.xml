<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_view_tour_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/colorPrimary" />

        <TextView
            android:id="@+id/tourTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candi Prambanan"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@id/image_view_tour_image"
            android:layout_toStartOf="@id/tourLocation"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            />

        <ImageView
            android:id="@+id/tourLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gps"
            android:layout_marginTop="10dp"
            android:layout_below="@id/image_view_tour_image"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tourAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tourLocation"
            android:layout_marginEnd="5dp"
            android:layout_alignParentStart="true"
            android:text="Alamat candi prambanan ada di sini kalau mau liat"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@id/tourTitle"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>